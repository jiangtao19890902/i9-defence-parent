<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="i9.defence.platform.dao.mapper.PassagewayMapper">
	<resultMap type="i9.defence.platform.model.Passageway" id="BaseResultMap">
		<id column="channel" jdbcType="INTEGER" property="channel" />
		<result column="name" jdbcType="VARCHAR" property="name" />
		<result column="categoryId" jdbcType="INTEGER" property="categoryId" />
		<result column="hiddenDangerId" jdbcType="INTEGER" property="hiddenDangerId" />
		<association property="equipmentCategory" column="categoryId"
			select="i9.defence.platform.dao.mapper.PassagewayMapper.selectByEquipmentId"></association>
		<association property="hiddenDanger" column="HiddenDangerId"
			select="i9.defence.platform.dao.mapper.HiddenDangerMapper.selectByPrimaryKey"></association>
	</resultMap>

	<sql id="Base_Column_List">
		channel,name,categoryId,hiddenDangerId
	</sql>

	<select id="selectPassagewaysByCategoryId" parameterType="java.lang.Integer"
		resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List" />
		from t_passageway where categoryId =#{categoryId}
	</select>

	<insert id="addPassageWay" parameterType="i9.defence.platform.model.Passageway">
		insert into
		t_passageway(channel,name,categoryId,hiddenDangerId)
		values
		(#{item.channel,jdbcType=INTEGER},#{item.name,jdbcType=VARCHAR},#{item.categoryId,jdbcType=INTEGER},#{item.hiddenDangerId,jdbcType=INTEGER})
	</insert>
	
	<delete id="delPassagewayBySystemId" parameterType="java.lang.Integer">
		delete from t_passageway where categoryId = #{categoryId}
	</delete>
	
	<select id="selectCountByCatIdAndChannelId" parameterType="i9.defence.platform.model.Passageway" resultType="int">
		select count(*) from t_passageway where categoryId = #{categoryId} and channel = #{channel}
	</select> 
	
	<delete id="delPassageway" parameterType="i9.defence.platform.model.Passageway">
		delete from t_passageway where categoryId = #{categoryId} and channel = #{channel}
	</delete>
</mapper>